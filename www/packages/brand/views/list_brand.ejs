<div class="modal fade bs-example-modal-sm model-update-point-customer" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Cập nhật điểm</h5>
                <button type="button" class="close btnCloseMyLargeModalLabel" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>

            <div class="modal-body">
				<div class="row">
                    <div class="form-group col-md-12">
						<label>Tên khách hàng: </label> <b id="txtFullnameCustomerUpdate"></b>
                    </div>
					<div class="form-group col-md-12">
						<label>Số điện thoại: </label> <b id="txtPhoneCustomerUpdate"></b>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12"><label>Điểm xếp hạng</label> 
                        <input type="number" class="form-control" id="txtPointRankingUpdate" placeholder="VD: 200">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12"><label>Điểm có thể sử dụng</label> 
                        <input type="number" class="form-control" id="txtPointUpdate" placeholder="VD: 100">
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-info btnConfirmUpdatePoint">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
